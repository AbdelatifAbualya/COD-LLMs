[Unit]
Description=Enhanced LLM Playground
After=network.target

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/path/to/enhanced-llm-playground
ExecStart=/usr/bin/node server.js
Restart=on-failure
Environment=NODE_ENV=production
# Don't put your API token here - it should be in the .env file

[Install]
WantedBy=multi-user.target
