{
  "version": 2,
  "routes": [
    {
      "src": "/api/perplexity",
      "dest": "/api/perplexity.js"
    },
    {
      "src": "/api/proxy",
      "dest": "/api/proxy.js"
    },
    {
      "src": "/api-fallback/proxy",
      "dest": "/api/fallback-proxy.js"
    }
  ],
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "PERPLEXITY_API_KEY": "@perplexity-api-key",
    "FIREWORKS_API_KEY": "@fireworks-api-key"
  }
}
